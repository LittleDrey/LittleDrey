    private void btnExibirDadosActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        try {
            tv.tvCanal = (Integer.parseInt(txtCanalTV.getText()));
            tv.tvVolume = (Integer.parseInt(txtVolumeTV.getText()));
            if ("".equals(txtCanalTV.getText()) || ("".equals(txtVolumeTV.getText()))) {
                JOptionPane.showMessageDialog(null, "Verifique se vc deixou alguma caixa de texto vazia!!", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
                txtCanalTV.requestFocus();
            } else {
                tv.exibirDados();
            }
        } catch (NumberFormatException erro) {
            JOptionPane.showMessageDialog(null, "Verifique se vc deixou algum item vazio!!", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
            txtCanalTV.requestFocus();
        }
    }                                              

    private void btnTrocarCanalActionPerformed(java.awt.event.ActionEvent evt) {                                               
        // TODO add your handling code here:
        try {
            tv.tvCanal = (Integer.parseInt(txtCanalTV.getText()));
            if ("".equals(txtCanalTV.getText())) {
                JOptionPane.showMessageDialog(null, "Verifique se vc deixou alguma caixa de texto vazia!!", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
                txtCanalTV.requestFocus();
            } else {
                tv.trocarCanal();
            }
        } catch (NumberFormatException erro) {
            JOptionPane.showMessageDialog(null, "Verifique se vc deixou algum item vazio!!", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
            txtCanalTV.requestFocus();
        }    
    }                                              

    private void btnAumentarVolumeActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
        try {
            tv.tvVolume = (Integer.parseInt(txtVolumeTV.getText()));
            if ("".equals(txtVolumeTV.getText())) {
                JOptionPane.showMessageDialog(null, "Verifique se vc deixou a caixa de texto volume da TV vazia", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
                txtVolumeTV.requestFocus();
            } else {
                tv.aumentarVolume();
            }
        } catch (NumberFormatException erro) {
            JOptionPane.showMessageDialog(null, "Verifique se vc deixou a caixa de texto volume da TV vazia!!", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
            txtVolumeTV.requestFocus();
        }
    }                                                 

    private void btnDiminuirVolumeActionPerformed(java.awt.event.ActionEvent evt) {                                                  
        // TODO add your handling code here:
        try {
            tv.tvVolume = (Integer.parseInt(txtVolumeTV.getText()));
            if ("".equals(txtVolumeTV.getText())) {
                JOptionPane.showMessageDialog(null, "Verifique se vc deixou a caixa de texto volume da TV vazia!!", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
                txtVolumeTV.requestFocus();
            } else {
                tv.diminuirVolume();
            }
        } catch (NumberFormatException erro) {
            JOptionPane.showMessageDialog(null, "Verifique se vc deixou a caixa de texto volume da TV vazia!!", "Erro na entrada de dados", JOptionPane.INFORMATION_MESSAGE);
            txtVolumeTV.requestFocus();
        }
    }                                                 

    private void btnLimparActionPerformed(java.awt.event.ActionEvent evt) {                                          
        // TODO add your handling code here:
        txtCanalTV.setText("");
        txtVolumeTV.setText("");
        txtCanalTV.requestFocus();
    }                                         

    private void btnSairActionPerformed(java.awt.event.ActionEvent evt) {                                        
        // TODO add your handling code here:
        if (JOptionPane.showConfirmDialog(null, "Deseja sair do programa?", "***Saindo do programa***", JOptionPane.YES_NO_OPTION) == 0) {
            this.dispose();
        } else {
            txtCanalTV.requestFocus();
        }
    }                                       

